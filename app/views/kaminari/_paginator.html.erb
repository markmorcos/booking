<%= paginator.render do -%>
<nav class="flex items-center justify-between border-t border-gray-200 px-4 py-3 sm:px-6 mt-4">
  <div class="flex flex-1 justify-between sm:hidden">
    <% unless current_page.first? %>
      <%= link_to url_for(page: current_page.pred), class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
        Previous
      <% end %>
    <% else %>
      <span class="relative inline-flex items-center rounded-md border border-gray-300 bg-gray-50 px-4 py-2 text-sm font-medium text-gray-500">
        Previous
      </span>
    <% end %>
    
    <% unless current_page.last? %>
      <%= link_to url_for(page: current_page.next), class: "ml-3 relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
        Next
      <% end %>
    <% else %>
      <span class="ml-3 relative inline-flex items-center rounded-md border border-gray-300 bg-gray-50 px-4 py-2 text-sm font-medium text-gray-500">
        Next
      </span>
    <% end %>
  </div>
  
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing <span class="font-medium"><%= [(current_page - 1) * limit_value + 1, total_count].min %></span> to <span class="font-medium"><%= [current_page * limit_value, total_count].min %></span> of <span class="font-medium"><%= total_count %></span> results
      </p>
    </div>
    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
        <!-- Previous Page Link -->
        <% if current_page.first? %>
          <span class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300">
            <span class="sr-only">Previous</span>
            <i class="fas fa-chevron-left h-5 w-5"></i>
          </span>
        <% else %>
          <%= link_to url_for(page: current_page.pred), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" do %>
            <span class="sr-only">Previous</span>
            <i class="fas fa-chevron-left h-5 w-5"></i>
          <% end %>
        <% end %>
        
        <!-- Page Links -->
        <% each_page do |page| -%>
          <% if page.display_tag? -%>
            <% if page.current? -%>
              <span class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                <%= page.display_tag %>
              </span>
            <% else -%>
              <%= link_to page.display_tag, url_for(page: page.number), class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" %>
            <% end -%>
          <% elsif page.gap? -%>
            <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300">
              &hellip;
            </span>
          <% end -%>
        <% end -%>
        
        <!-- Next Page Link -->
        <% if current_page.last? %>
          <span class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300">
            <span class="sr-only">Next</span>
            <i class="fas fa-chevron-right h-5 w-5"></i>
          </span>
        <% else %>
          <%= link_to url_for(page: current_page.next), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0" do %>
            <span class="sr-only">Next</span>
            <i class="fas fa-chevron-right h-5 w-5"></i>
          <% end %>
        <% end %>
      </nav>
    </div>
  </div>
</nav>
<% end -%>