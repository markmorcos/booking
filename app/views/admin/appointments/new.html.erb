<div class="pb-5 border-b border-gray-200 sm:flex sm:items-center sm:justify-between">
  <h1 class="text-2xl font-semibold text-gray-900">New Appointment</h1>
  <div class="mt-3 sm:mt-0 sm:ml-4">
    <%= link_to admin_appointments_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <i class="fas fa-arrow-left -ml-1 mr-2"></i>
      Back to List
    <% end %>
  </div>
</div>

<div class="mt-6 bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Appointment Information</h3>
      <p class="mt-1 text-sm text-gray-500">
        Create a new appointment by selecting an available time slot and entering client details.
      </p>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= render 'form', appointment: @appointment %>
    </div>
  </div>
</div>