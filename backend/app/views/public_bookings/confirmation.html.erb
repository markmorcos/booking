<%# Step 3: Confirmation %>
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white py-12">
  <div class="max-w-lg mx-auto px-4 sm:px-6">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200/50 backdrop-blur-xl overflow-hidden">
      <%# Success Header %>
      <div class="px-6 pt-16 pb-12 text-center">
        <%# Success Animation %>
        <div class="mx-auto w-16 h-16 rounded-full bg-green-100 p-2 flex items-center justify-center ring-8 ring-green-50 mb-8">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>

        <h1 class="text-3xl font-bold text-gray-900 mb-3">You're scheduled!</h1>
        <p class="text-lg text-gray-600">
          We've sent a calendar invitation to your email
        </p>
      </div>

      <%# Booking Details %>
      <div class="px-6 py-8 bg-gray-50/50 border-t border-gray-200">
        <h2 class="text-base font-semibold text-gray-900 mb-6">Appointment Details</h2>
        
        <div class="space-y-6">
          <%# Date & Time %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div>
              <p class="font-medium text-gray-900">
                <%= @appointment.availability_slot.starts_at.strftime("%B %d, %Y") %>
              </p>
              <p class="text-gray-500">
                <%= @appointment.availability_slot.starts_at.strftime("%I:%M %p") %> - 
                <%= @appointment.availability_slot.ends_at.strftime("%I:%M %p") %>
              </p>
            </div>
          </div>

          <%# Contact Info %>
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @appointment.user.name %></p>
              <p class="text-gray-500"><%= @appointment.user.email %></p>
              <% if @appointment.user.phone.present? %>
                <p class="text-gray-500 mt-1"><%= @appointment.user.phone %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Actions %>
    <div class="mt-8 flex flex-col items-center gap-4">
      <%= link_to public_booking_calendar_path(@appointment.id), 
          class: "inline-flex items-center justify-center gap-2 px-4 py-2 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-lg hover:bg-indigo-100" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Add to Calendar
      <% end %>

      <%= link_to "Book Another Time", public_booking_path(@tenant.path),
          class: "text-sm text-gray-500 hover:text-indigo-600" %>
    </div>
  </div>
</div> 