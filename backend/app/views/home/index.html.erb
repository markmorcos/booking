<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Booking System
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Please login to access the booking system
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <% if user_signed_in? %>
        <div class="flex flex-col items-center">
          <p class="mb-4 text-gray-700">You are signed in as <%= current_user.email %></p>
          
          <% if current_user.admin? %>
            <%= link_to "Go to Admin Dashboard", admin_root_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% else %>
            <p class="mb-4 text-amber-700">Please use the <a href="https://play.google.com/store/apps/details?id=tech.morcos.booking" target="_blank" class="text-indigo-600 hover:text-indigo-700">mobile app</a> to start booking</p>
          <% end %>
          
          <div class="mt-4">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% else %>
        <div class="space-y-4">
          <%= link_to "Login", new_user_session_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>